{
  "ci": {
    "collect": {
      "startServerCommand": "yarn serve:website",
      "startServerReadyPattern": "Serving",
      "startServerReadyTimeout": 10000,

      "numberOfRuns": 5,

      "settings": {
        "skipAudits": [
          "robots-txt",
          "canonical",
          "tap-targets",
          "is-crawlable",
          "works-offline",
          "offline-start-url"
        ]
      }
    }
  }
}
